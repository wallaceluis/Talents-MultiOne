generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(RECRUITER)
  status    UserStatus @default(ACTIVE)
  companyId String
  company   Company  @relation(fields: [companyId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model Company {
  id          String        @id @default(uuid())
  name        String
  domain      String        @unique
  industry    String?
  description String?
  location    String?
  website     String?
  size        CompanySize   @default(SMALL)
  status      CompanyStatus @default(TRIAL)
  planId      String?
  plan        Plan?         @relation(fields: [planId], references: [id])
  users       User[]
  vacancies   Vacancy[]
  candidates  Candidate[]
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@map("companies")
}

model Plan {
  id                String    @id @default(uuid())
  name              String
  maxVacancies      Int
  maxCandidates     Int
  maxUsers          Int
  price             Float
  companies         Company[]
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  @@map("plans")
}

model Vacancy {
  id           String         @id @default(uuid())
  title        String
  description  String
  location     String?
  type         VacancyType    @default(FULL_TIME)
  status       VacancyStatus  @default(OPEN)
  salary       Float?
  companyId    String
  company      Company        @relation(fields: [companyId], references: [id], onDelete: Cascade)
  applications Application[]
  skills       VacancySkill[]
  createdAt    DateTime       @default(now())
  updatedAt    DateTime       @updatedAt

  @@map("vacancies")
}

model Candidate {
  id              String            @id @default(uuid())
  name            String
  email           String            @unique
  phone           String?
  birthDate       DateTime?
  city            String?
  state           String?
  country         String?
  linkedin        String?
  resume          String?
  status          CandidateStatus   @default(ACTIVE)
  companyId       String
  company         Company           @relation(fields: [companyId], references: [id], onDelete: Cascade)
  applications    Application[]
  skills          CandidateSkill[]
  experiences     Experience[]
  educations      Education[]
  createdAt       DateTime          @default(now())
  updatedAt       DateTime          @updatedAt

  @@map("candidates")
}

model Skill {
  id         String           @id @default(uuid())
  name       String           @unique
  candidates CandidateSkill[]
  vacancies  VacancySkill[]
  createdAt  DateTime         @default(now())
  updatedAt  DateTime         @default(now()) @updatedAt

  @@map("skills")
}

model CandidateSkill {
  candidateId String
  skillId     String
  level       SkillLevel @default(INTERMEDIATE)
  candidate   Candidate  @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  skill       Skill      @relation(fields: [skillId], references: [id], onDelete: Cascade)
  createdAt   DateTime   @default(now())

  @@id([candidateId, skillId])
  @@map("candidate_skills")
}

model VacancySkill {
  vacancyId String
  skillId   String
  required  Boolean  @default(true)
  vacancy   Vacancy  @relation(fields: [vacancyId], references: [id], onDelete: Cascade)
  skill     Skill    @relation(fields: [skillId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@id([vacancyId, skillId])
  @@map("vacancy_skills")
}

model Experience {
  id          String    @id @default(uuid())
  company     String
  position    String
  description String?
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("experiences")
}

model Education {
  id          String    @id @default(uuid())
  institution String
  degree      String
  field       String?
  startDate   DateTime
  endDate     DateTime?
  current     Boolean   @default(false)
  candidateId String
  candidate   Candidate @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@map("educations")
}

model Application {
  id          String            @id @default(uuid())
  candidateId String
  vacancyId   String
  status      ApplicationStatus @default(PENDING)
  candidate   Candidate         @relation(fields: [candidateId], references: [id], onDelete: Cascade)
  vacancy     Vacancy           @relation(fields: [vacancyId], references: [id], onDelete: Cascade)
  interviews  Interview[]
  createdAt   DateTime          @default(now())
  updatedAt   DateTime          @updatedAt

  @@unique([candidateId, vacancyId])
  @@map("applications")
}

model Interview {
  id            String      @id @default(uuid())
  applicationId String
  scheduledAt   DateTime
  type          String
  notes         String?
  status        String      @default("SCHEDULED")
  application   Application @relation(fields: [applicationId], references: [id], onDelete: Cascade)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt

  @@map("interviews")
}

enum Role {
  ADMIN
  MANAGER
  RECRUITER
  VIEWER
}

enum UserStatus {
  ACTIVE
  INACTIVE
}

enum CompanyStatus {
  ACTIVE
  TRIAL
  INACTIVE
}

enum CompanySize {
  SMALL
  MEDIUM
  LARGE
  ENTERPRISE
}

enum VacancyType {
  FULL_TIME
  PART_TIME
  CONTRACT
  INTERNSHIP
}

enum VacancyStatus {
  OPEN
  CLOSED
  PAUSED
}

enum CandidateStatus {
  ACTIVE
  INACTIVE
  IN_PROCESS
  HIRED
}

enum ApplicationStatus {
  PENDING
  REVIEWING
  INTERVIEW
  OFFERED
  ACCEPTED
  REJECTED
}

enum SkillLevel {
  BEGINNER
  INTERMEDIATE
  ADVANCED
  EXPERT
}
